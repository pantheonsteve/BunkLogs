# Local Development Environment Variables
# Copy this file and rename to .env for local development

# Django Settings
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=local-development-secret-key-change-in-production
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_ADMIN_URL=admin/

# Database (PostgreSQL - Local Docker)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bunk_logs_local
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis (Local Docker)
REDIS_URL=redis://localhost:6379/0

# Email (Development - Console Backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# AWS S3 (Not needed for local development)
DJANGO_AWS_ACCESS_KEY_ID=dummy
DJANGO_AWS_SECRET_ACCESS_KEY=dummy
DJANGO_AWS_STORAGE_BUCKET_NAME=dummy

# Mailgun (Not needed for local development)
MAILGUN_API_KEY=dummy
MAILGUN_DOMAIN=dummy

# API Keys (Add your development keys here)
# GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
# GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret
