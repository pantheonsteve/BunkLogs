# .ebextensions/00_timeout.config
# Extended timeout configurations for Docker builds and deployments
# This addresses the 10+ minute build times causing EB deployment failures

option_settings:
  # Extended command timeout for Docker builds
  aws:elasticbeanstalk:command:
    Timeout: 1200  # 20 minutes
    DeploymentPolicy: Rolling
    BatchSize: 30
    BatchSizeType: Percentage
    IgnoreHealthCheck: false
    
  # Health check timeout settings
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: enhanced
    HealthCheckSuccessThreshold: Ok
    
  # Load balancer timeout settings
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckTimeout: 15
    HealthCheckInterval: 30
    HealthyThresholdCount: 3
    UnhealthyThresholdCount: 5
