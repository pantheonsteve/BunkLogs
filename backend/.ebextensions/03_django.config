# .ebextensions/03_django.config
# Django-specific configurations and deployment commands

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_DEBUG: "False"
    DJANGO_SETTINGS_MODULE: "config.settings.production"
    DJANGO_SECRET_KEY: "your-secret-key-here-replace-with-actual-secret"
    DJANGO_ALLOWED_HOSTS: ".elasticbeanstalk.com,.bunklogs.net,bunklogs.net,clc.bunklogs.net,admin.bunklogs.net"
    DJANGO_SECURE_SSL_REDIRECT: "True"
    
    # Frontend URL settings for OAuth redirects
    FRONTEND_URL: "https://clc.bunklogs.net"
    LOGIN_REDIRECT_URL: "https://clc.bunklogs.net/dashboard"
    ACCOUNT_LOGOUT_REDIRECT_URL: "https://clc.bunklogs.net/signin"
    
    # Add any other environment variables your app needs
    # DJANGO_AWS_ACCESS_KEY_ID: "your-aws-access-key"
    # DJANGO_AWS_SECRET_ACCESS_KEY: "your-aws-secret-key"
    # DJANGO_AWS_STORAGE_BUCKET_NAME: "your-s3-bucket"
    
    # Email settings (replace with your values)
    # EMAIL_HOST: "smtp.gmail.com"
    # EMAIL_PORT: "587"
    # EMAIL_HOST_USER: "your-email@gmail.com"
    # EMAIL_HOST_PASSWORD: "your-app-password"
    # DEFAULT_FROM_EMAIL: "noreply@bunklogs.net"